{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "portuguese-brazil",

  "model": "claude-sonnet-4-20250514",

  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000"
  },

  "permissions": {
    "allow": [
      "Read(**/*.tsx)",
      "Read(**/*.ts)",
      "Read(**/*.jsx)",
      "Read(**/*.js)",
      "Read(**/*.json)",
      "Read(**/*.md)",
      "Read(**/*.css)",
      "Read(**/*.scss)",
      "Edit(**/*.tsx)",
      "Edit(**/*.ts)",
      "Edit(**/*.jsx)",
      "Edit(**/*.js)",
      "Edit(**/*.json)",
      "Edit(**/*.md)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(vite *)",
      "Bash(pnpm *)",
      "Glob",
      "Grep",
      "Search"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./.env.development)",
      "Read(./secrets/**)",
      "Read(./**/secrets/**)",
      "Read(./node_modules/**)",
      "Read(./dist/**)",
      "Read(./build/**)",
      "Read(./.next/**)",
      "Read(./coverage/**)",
      "Write(./node_modules/**)",
      "Write(./dist/**)",
      "Write(./build/**)",
      "Write(./.next/**)"
    ],
    "defaultMode": "acceptEdits"
  },

  "outputStyle": "concise",

  "includeCoAuthoredBy": false,

  "respectGitignore": true
}
